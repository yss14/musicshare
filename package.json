{
	"name": "musicshare",
	"version": "1.0.0",
	"private": true,
	"description": "Simple yet powerful self-hosted open-source music library, powered by NodeJS, GraphQL, and React.",
	"scripts": {
		"start:backend": "lerna run start --stream --scope @musicshare/backend",
		"start:frontend": "lerna run start --stream --scope @musicshare/frontend",
		"dev": "npm run build:cassandra-schema-builder && lerna run dev --stream --parallel",
		"dev:backend": "npm run build:cassandra-schema-builder && lerna run dev --stream --scope @musicshare/backend",
		"bootstrap": "lerna bootstrap",
		"build": "lerna run build --stream",
		"build:backend": "lerna run build --stream --scope @musicshare/backend",
		"build:frontend": "lerna run build --stream --scope @musicshare/frontend",
		"build:cassandra-schema-builder": "lerna run build --stream --scope cassandra-schema-builder",
		"build:postgres-schema-builder": "lerna run build --stream --scope postgres-schema-builder",
		"verify": "lerna run verify --stream",
		"verify:backend": "lerna run verify --stream --scope @musicshare/backend",
		"verify:frontend": "lerna run verify --stream --scope @musicshare/frontend",
		"verify:cassandra-schema-builder": "lerna run verify --stream --scope cassandra-schema-builder",
		"verify:postgres-schema-builder": "lerna run verify --stream --scope postgres-schema-builder",
		"lint": "lerna run lint --stream --parallel",
		"lint:backend": "lerna run lint --stream --scope @musicshare/backend",
		"test": "npm run build:cassandra-schema-builder && lerna run test --stream",
		"test:backend": "npm run build:cassandra-schema-builder && lerna run test --stream --scope @musicshare/backend",
		"test:cassandra-schema-builder": "lerna run test --stream --scope cassandra-schema-builder",
		"test:postgres-schema-builder": "lerna run test --stream --scope postgres-schema-builder",
		"test:ci": "lerna run test:ci --stream --scope @musicshare/backend",
		"postinstall": "npm run bootstrap"
	},
	"dependencies": {
		"axios": "^0.18.0",
		"bind-decorator": "^1.0.11",
		"dotenv": "^7.0.0",
		"lodash": "^4.17.11",
		"moment": "^2.24.0",
		"uuid": "^3.3.2"
	},
	"devDependencies": {
		"@types/dotenv": "^6.1.1",
		"@types/jest": "^24.0.9",
		"@types/lodash": "^4.14.123",
		"@types/node": "^12.0.2",
		"@types/uuid": "^3.4.4",
		"codecov": "^3.3.0",
		"concurrently": "^4.1.0",
		"jest": "^24.7.1",
		"jest-extended": "^0.11.1",
		"jest-runner-concurrent": "^0.1.1",
		"lerna": "^3.13.4",
		"ts-jest": "^24.0.1",
		"tsc-watch": "^3.0.0",
		"tslint": "^5.15.0",
		"tslint-clean-code": "^0.2.9",
		"tslint-config-prettier": "^1.18.0",
		"tslint-eslint-rules": "^5.4.0",
		"tslint-react": "^4.0.0",
		"typescript": "^3.4.5"
	}
}