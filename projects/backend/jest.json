{
	"rootDir": "./",
	"transform": {
		"^.+\\.tsx?$": "ts-jest"
	},
	"testEnvironment": "node",
	"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
	"moduleFileExtensions": [
		"ts",
		"tsx",
		"js",
		"jsx",
		"json"
	],
	"globalSetup": "./src/__test__/utils/global-setup.ts",
	"setupFilesAfterEnv": [
		"jest-extended",
		"./src/__test__/utils/global-setup-after-env.ts"
	],
	"collectCoverage": false,
	"collectCoverageFrom": [
		"**/*.ts",
		"!**/node_modules/**",
		"!**/vendor/**",
		"!src/index.ts",
		"!**/__test__/**",
		"!src/database/seed.ts",
		"!src/database/fixtures.ts",
		"!src/database/core-database.ts",
		"!src/utils/env/load-envs-from-file.ts",
		"!build/**"
	],
	"coverageReporters": [
		"text",
		"lcov"
	],
	"preset": "ts-jest",
	"testMatch": null,
	"runner": "jest-runner-concurrent",
	"globals": {
		"ts-jest": {
			"isolatedModules": true
		}
	}
}