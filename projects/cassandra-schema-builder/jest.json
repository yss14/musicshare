{
	"rootDir": "./",
	"transform": {
		"^.+\\.tsx?$": "ts-jest"
	},
	"testEnvironment": "node",
	"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
	"moduleFileExtensions": [
		"ts",
		"tsx",
		"js",
		"jsx",
		"json"
	],
	"setupFilesAfterEnv": [
		"jest-extended",
		"./src/__test__/utils/global-setup-after-env.ts"
	],
	"collectCoverage": false,
	"collectCoverageFrom": [
		"src/**/*.ts",
		"!**/node_modules/**",
		"!**/vendor/**",
		"!src/index.ts",
		"!**/__test__/**"
	],
	"coverageReporters": [
		"text",
		"lcov"
	],
	"preset": "ts-jest",
	"testMatch": null
}