{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"strict": true,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"allowSyntheticDefaultImports": false,
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noUnusedLocals": true,
		"pretty": true
	},
	"compileOnSave": true,
	"exclude": [
		"node_modules",
		"build"
	]
}