{
	"rootDir": "./",
	"transform": {
		"^.+\\.tsx?$": "ts-jest"
	},
	"testEnvironment": "node",
	"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
	"moduleFileExtensions": [
		"ts",
		"tsx",
		"js",
		"jsx",
		"json"
	],
	"globalSetup": "./src/__test__/utils/global-setup.ts",
	"collectCoverage": false,
	"collectCoverageFrom": [
		"**/*.ts",
		"!**/node_modules/**",
		"!**/vendor/**"
	],
	"coverageReporters": [
		"text",
		"lcov"
	],
	"preset": "ts-jest",
	"testMatch": null
}